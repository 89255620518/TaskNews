{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "strict": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "checkJs": false,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  